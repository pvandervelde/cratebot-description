            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <cylinder length="0.05" radius="0.04" />
            </geometry>
        </collision>
    </link>


    <!--
        Left rear wheel assembly
    -->

    <joint name="left_rear_wheel_chassis_to_swivel_joint" type="continuous">
        <origin rpy="0 0 0" xyz="-0.125 0.155 0.095"/>
        <parent link="chassis_link"/>
        <child link="left_rear_wheel_swivel_link"/>
        <axis xyz="0.0 0.0 1.0"/>
    </joint>

    <link name="left_rear_wheel_swivel_link">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <cylinder length="0.01" radius="0.05" />
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <cylinder length="0.01" radius="0.05" />
            </geometry>
        </collision>

        <visual>
            <origin rpy="0 0 0" xyz="0 -0.04 -0.035"/>
            <geometry>
                <box size="0.04 0.01 0.06" />
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <origin rpy="0 0 0" xyz="0 -0.04 -0.035"/>
            <geometry>
                <box size="0.04 0.01 0.06" />
            </geometry>
        </collision>
    </link>

    <joint name="left_rear_wheel_swivel_to_wheel_joint" type="continuous">
        <origin rpy="1.570796 0 0" xyz="0 0 -0.055"/>
        <parent link="left_rear_wheel_swivel_link"/>
        <child link="left_rear_wheel_link"/>
        <axis xyz="0.0 1.0 0.0"/>
    </joint>

    <link name="left_rear_wheel_link">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <cylinder length="0.05" radius="0.04" />
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <cylinder length="0.05" radius="0.04" />
            </geometry>
        </collision>
    </link>

    <!--
        Right rear wheel assembly
    -->
    <joint name="right_rear_wheel_chassis_to_swivel_joint" type="continuous">
        <origin rpy="0 0 0" xyz="-0.125 -0.155 0.095"/>
        <parent link="chassis_link"/>
        <child link="right_rear_wheel_swivel_link"/>
        <axis xyz="0.0 0.0 1.0"/>
    </joint>

    <link name="right_rear_wheel_swivel_link">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
