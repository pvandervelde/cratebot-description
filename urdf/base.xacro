            </geometry>
        </collision>

        <visual>
            <origin rpy="0 0 0" xyz="0 0.04 -0.035"/>
            <geometry>
                <box size="0.04 0.01 0.06" />
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <origin rpy="0 0 0" xyz="0 0.04 -0.035"/>
            <geometry>
                <box size="0.04 0.01 0.06" />
            </geometry>
        </collision>
    </link>

    <joint name="right_front_wheel_swivel_to_wheel_joint" type="continuous">
        <origin rpy="1.570796 0 0" xyz="0 0 -0.055"/>
        <parent link="right_front_wheel_swivel_link"/>
        <child link="right_front_wheel_link"/>
        <axis xyz="0.0 1.0 0.0"/>
    </joint>

    <link name="right_front_wheel_link">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
