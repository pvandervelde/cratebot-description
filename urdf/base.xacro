<?xml version="1.0" ?>
<robot name="cratebot" xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="$(find cratebot_description)/urdf/materials.xacro" />
    <xacro:include filename="$(find cratebot_description)/urdf/transmittions.xacro" />
    <xacro:include filename="$(find cratebot_description)/urdf/gazebo.xacro" />

    <!--
      An empty base link for the following reasons:
      - When running a simulation the base link is not allowed to have inertia, but the chassis does need to have
        its inertia defined. So the fix is to define a 'dummy' base link.
    -->
    <link name="base_link">
    </link>

    <!--
        A box that pretends to be the ground. Used for testing that the scuttle model has been assembled correctly.
    -->
    <link name="ground_for_testing">
        <visual>
            <geometry>
                <box size="0.5 0.5 0.01"/>
            </geometry>
            <origin rpy="0 0 0" xyz="0.25 -0.25 -0.005"/>
        </visual>
    </link>

    <!-- The chassis of cratebot -->
    <!--
        Define the connection between base_link and chassis_link. Relative to base_link the joint
        is exactly in the c.o.g of the chassis, because ROS considers the joint frame to be the same
        as the child frame.
    -->
    <joint name="chassis_joint" type="fixed">
        <origin rpy="0 0 0" xyz="0.0 0 0.0"/>
        <parent link="base_link"/>
        <child link="chassis_link"/>
    </joint>

    <!--
      The coordinate framework has the X-asis in the direction of forward motion, with the y-axis pointing
      to the left. This is equivalent to the coordinate system defined by the kinematics guide.
    -->
    <link name="chassis_link">
        <!--
        <inertial>
            <origin rpy="0 0 0" xyz="2.12433370053547e-05 -0.07877992189559235 0.07392564365565002"/>
            <mass value="3.288323846275119"/>
            <inertia ixx="0.038876" ixy="1.3e-05" ixz="1e-06" iyy="0.047513" iyz="0.000486" izz="0.084083"/>
        </inertial>
        -->
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0.07"/>
            <geometry>
                <box size="0.35 0.2 0.06" />
            </geometry>
            <material name="silver"/>
        </visual>
        <collision>
            <origin rpy="0 0 0" xyz="0 0 0.07"/>
            <geometry>
                <box size="0.35 0.2 0.06" />
            </geometry>
        </collision>
    </link>

    <!--
        Left front wheel assembly
    -->

    <joint name="left_front_wheel_chassis_to_swivel_joint" type="continuous">
        <origin rpy="0 0 0" xyz="0.125 0.155 0.095"/>
        <parent link="chassis_link"/>
        <child link="left_front_wheel_swivel_link"/>
        <axis xyz="0.0 0.0 1.0"/>
    </joint>

    <link name="left_front_wheel_swivel_link">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <cylinder length="0.01" radius="0.05" />
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <cylinder length="0.01" radius="0.05" />
            </geometry>
        </collision>

        <visual>
            <origin rpy="0 0 0" xyz="0 -0.04 -0.035"/>
            <geometry>
                <box size="0.04 0.01 0.06" />
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <origin rpy="0 0 0" xyz="0 -0.04 -0.035"/>
            <geometry>
                <box size="0.04 0.01 0.06" />
            </geometry>
        </collision>
    </link>

    <joint name="left_front_wheel_swivel_to_wheel_joint" type="continuous">
        <origin rpy="1.570796 0 0" xyz="0 0 -0.055"/>
        <parent link="left_front_wheel_swivel_link"/>
        <child link="left_front_wheel_link"/>
        <axis xyz="0.0 1.0 0.0"/>
    </joint>

    <link name="left_front_wheel_link">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <cylinder length="0.05" radius="0.04" />
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <cylinder length="0.05" radius="0.04" />
            </geometry>
        </collision>
    </link>

    <!--
        Right front wheel assembly
    -->

    <joint name="right_front_wheel_chassis_to_swivel_joint" type="continuous">
        <origin rpy="0 0 0" xyz="0.125 -0.155 0.095"/>
